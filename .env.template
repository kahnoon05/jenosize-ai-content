# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=development
NODE_ENV=development

# ============================================
# API KEYS (REQUIRED)
# ============================================
# Anthropic API Key for Claude models (PRIMARY - REQUIRED)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (OPTIONAL - for fallback or comparison)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# QDRANT VECTOR DATABASE SETTINGS
# ============================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION_NAME=jenosize_articles

# ============================================
# BACKEND API SETTINGS
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# FRONTEND SETTINGS
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Jenosize AI Content Generator

# ============================================
# LANGCHAIN SETTINGS
# ============================================
# Model configuration
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Embedding model (for Qdrant vector storage)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ============================================
# CONTENT GENERATION SETTINGS
# ============================================
# Article generation parameters
DEFAULT_ARTICLE_LENGTH=2000
MIN_ARTICLE_LENGTH=800
MAX_ARTICLE_LENGTH=4000

# SEO settings
GENERATE_META_DESCRIPTION=true
GENERATE_KEYWORDS=true
MAX_KEYWORDS=10

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGS=false

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# ============================================
# SECURITY
# ============================================
# JWT Secret for API authentication (generate a strong random string)
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# ============================================
# DATABASE & STORAGE
# ============================================
# Local storage path for generated articles
STORAGE_PATH=./data/generated
SAMPLE_DATA_PATH=./data/samples

# ============================================
# DOCKER SETTINGS
# ============================================
COMPOSE_PROJECT_NAME=jenosize-ai-content

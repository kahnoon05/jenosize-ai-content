# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# ============================================
# QDRANT CLOUD CONFIGURATION
# ============================================
QDRANT_HOST=your-cluster-id.region.cloud.qdrant.io
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_USE_HTTPS=true
QDRANT_COLLECTION_NAME=jenosize_articles

# ============================================
# AI API KEYS (REQUIRED - ADD YOUR KEY!)
# ============================================
# Option 1: Anthropic Claude (Recommended)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Option 2: OpenAI GPT (Alternative)
# OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# MODEL CONFIGURATION
# ============================================
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# ============================================
# RAG CONFIGURATION
# ============================================
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# ============================================
# EMBEDDING CONFIGURATION (Local - No API Key Needed)
# ============================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=production
NODE_ENV=production
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_VERSION=v1

# ============================================
# CORS CONFIGURATION
# ============================================
# For production, replace with your actual frontend URL
CORS_ORIGINS=*

# For Vercel deployment, use:
# CORS_ORIGINS=https://your-app.vercel.app,https://jenosize-ai-content.vercel.app

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Replace with your Railway backend URL
NEXT_PUBLIC_API_URL=https://your-backend.up.railway.app
NEXT_PUBLIC_APP_NAME=Jenosize AI Content Generator

# ============================================
# CONTENT GENERATION SETTINGS
# ============================================
DEFAULT_ARTICLE_LENGTH=2000
MIN_ARTICLE_LENGTH=800
MAX_ARTICLE_LENGTH=4000

# SEO Settings
GENERATE_META_DESCRIPTION=true
GENERATE_KEYWORDS=true
MAX_KEYWORDS=10

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGS=false

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# ============================================
# STORAGE & PATHS
# ============================================
STORAGE_PATH=./data/generated
SAMPLE_DATA_PATH=./data/samples

# Environment Configuration Example
# Copy this to .env and add your actual API keys

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=development
NODE_ENV=development

# ============================================
# API KEYS (REQUIRED - ADD YOUR KEYS!)
# ============================================
# Anthropic API Key for Claude models
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key for GPT models and embeddings
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# QDRANT CLOUD CONFIGURATION
# ============================================
# Your Qdrant Cloud cluster endpoint (without https://)
QDRANT_HOST=your-cluster-id.region.gcp.cloud.qdrant.io
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION_NAME=jenosize_articles
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_USE_HTTPS=true
QDRANT_USE_GRPC=false

# ============================================
# BACKEND API SETTINGS
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# FRONTEND SETTINGS
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Jenosize AI Content Generator

# ============================================
# MODEL CONFIGURATION
# ============================================
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Embedding model
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ============================================
# CONTENT GENERATION SETTINGS
# ============================================
DEFAULT_ARTICLE_LENGTH=2000
MIN_ARTICLE_LENGTH=800
MAX_ARTICLE_LENGTH=4000

# SEO settings
GENERATE_META_DESCRIPTION=true
GENERATE_KEYWORDS=true
MAX_KEYWORDS=10

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGS=false

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# ============================================
# STORAGE
# ============================================
STORAGE_PATH=./data/generated
SAMPLE_DATA_PATH=./data/samples

# ============================================
# DOCKER SETTINGS
# ============================================
COMPOSE_PROJECT_NAME=jenosize-ai-content
